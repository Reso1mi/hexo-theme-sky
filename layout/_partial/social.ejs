<footer class="footer-social">
    <% if (theme.github_username) { %>
    <a class="social-link" target="_blank" href="https://github.com/<%= theme.github_username %>">
        <i class="iconfont icon-github"></i>
    </a>
    <% } %>

    <% if (theme.zhihu_username) { %>
    <a class="social-link" target="_blank" href="https://www.zhihu.com/people/<%= theme.zhihu_username %>">
        <i class="iconfont icon-zhihu"></i>
    </a>
    <% } %>

    <% if (theme.weibo_username) { %>
    <a class="social-link" target="_blank" href="http://weibo.com/<%= theme.weibo_username %>">
        <i class="iconfont icon-weibo"></i>
    </a>
    <% } %>

    <div class="footer-copyright">
        <p class="time-line">
            &copy;
            <% current = date(Date.now(), 'YYYY') %>
            <% if (theme.since && theme.since < current) { %>
                <%- theme.since %> -
            <% } %>
            <%- current %>
            &nbsp;<i class="iconfont icon-heart"></i>&nbsp;
            <a target="_blank" href="https://github.com/<%= theme.github_username %>"><%- theme.author %></a>
        </p>
        <p class="theme-info">
            Powered by <a target="_blank" href="https://hexo.io">Hexo</a>  |  Theme -
            <a target="_blank" href="https://github.com/imlgw/hexo-theme-sky">Sky</a>
        </p>
    </div>
</footer>