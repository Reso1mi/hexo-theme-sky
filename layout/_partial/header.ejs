<header class="header">
    <div class="header-inner">
        <div class="header-title">

        </div>
        <nav class="header-nav">
            <% if (theme.menu.Home) { %>
            <a href="<%= url_for(config.home_dir || '/')%>" class="header-nav-link" >
                <%- __('Menu.Home') %>
            </a>
            <% } %>

            <% if (theme.menu.Archives) { %>
            <a href="<%= url_for(config.archive_dir)%>" class="header-nav-link">
                <%- __('Menu.Archives')%>
            </a>
            <% } %>

            <% if (theme.menu.Tags) { %>
            <a href="<%= url_for(config.tag_dir)%>" class="header-nav-link">
                <%- __('Menu.Tags')%>
            </a>
            <% } %>
           
            <% if (theme.menu.Categories) { %>
                <a href="<%= theme.menu.Categories%>" class="header-nav-link">
                    <%- __('Menu.Categories')%>
                </a>
            <% } %>

            <% if (theme.menu.About) { %>
            <a href="<%= theme.menu.About %>" class="header-nav-link">
                <%- __('Menu.About')%>
            </a>
            <% } %>


            <% if (theme.menu.Selfhosted) { %>
                <a href="<%= theme.menu.Selfhosted %>" class="header-nav-link">
                    <%- __('Menu.Selfhosted')%>
                </a>
            <% } %>

            <% if (theme.menu.Search) { %>
                <a href="<%= theme.menu.Search %>" class="header-nav-link">
                    <%- __('Menu.Search')%>
                </a>
            <% } %>
        </nav>
    </div>
</header>